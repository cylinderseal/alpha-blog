<h1 class="text-center display-3">All Alpha Bloggers</h1>

<div class="center">
  <%= will_paginate %>
</div>

<% @users.each do |user| %>
  <ul class="listing mt-4">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 mx-auto">
          <div class="card text-center p-4">
            <li><%= link_to gravatar_for(user), user %></li>
              <li class="article-title">
                <%= link_to user.username, user %>
              </li>
              <li>
                <small>
                  <%= pluralize(user.articles.count, "article") if user.articles %>
                </small>
              </li>
              <% if logged_in? && current_user.admin? %>
                <div class="bd-highlight ml-2">
                  <%= link_to "Delete", user,  class: "badge badge-danger", 
                                                  method: :delete,
                                                  data: { confirm: "Are you sure?" } %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </ul>
<% end %>

<div class="center">
  <%= will_paginate %>
</div>