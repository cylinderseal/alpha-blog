<h1 class="text-center display-3"><%= @user.username %></h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <%= gravatar_for(@user, size: 150) %>
    </div>
  </div>
</div>

<h4 class="text-center mt-3 text-white"><%= @user.username %>'s articles:</h4>

<%= render 'articles/article', obj: @user.articles %>