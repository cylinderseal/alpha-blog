<%= form_for(@article) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label text-right d-none d-sm-block" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label text-right d-none d-sm-block" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Description", rows: 7 %>
    </div>
  </div>
    <div class="col-sm-8">
      <%= f.submit class: "btn btn-primary offset-sm-3" %>
    </div>
<% end %>